{
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.5.0",
    "popper.js": "^1.16.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "banner-plugin": "^1.0.10",
    "chai": "^4.2.0",
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^3.2.0",
    "htmlhint": "^0.11.0",
    "husky": "^4.2.3",
    "json5-loader": "^3.0.0",
    "lint-staged": "^10.0.8",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.1.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "serve:dist": "live-server dist",
    "serve:src": "webpack-dev-server --mode development",
    "serve": "live-server src --mount=/node_modules:node_modules",
    "prettier": "prettier **/*.{js,html,scss,css,md,ts,json} --write",
    "lint:html": "htmlhint",
    "build:scss": "node-sass --source-map true --recursive --output src/css  src/scss",
    "watch:scss": "nodemon --ext scss --exec npm run build:scss",
    "build:dev": "rimraf dist && webpack --mode development",
    "build:prod": "npm run lint:html && rimraf dist && webpack --mode production",
    "test": "mocha --recursive",
    "": ""
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.html": "htmlhint",
    "*.{js,html,scss,css,md,ts,json}": "prettier --write"
  }
}
